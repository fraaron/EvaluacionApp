<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_height="10dp"
            android:layout_width="10dp"/> <!-- Margen para separar del siguiente elemento -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Primera fila con CardView -->
            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:elevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                <TextView
                    style="@style/CardTitleStyle"
                    android:text="Título del Card 1"
                    android:padding="16dp"/> <!-- Padding para el contenido -->
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1">

                <TextView
                    style="@style/CardTitleStyle"
                    android:text="Título del Card 2"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>
        </TableRow>

        <!-- Segunda fila con CardView -->
        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1">

                <TextView
                    style="@style/CardTitleStyle"
                    android:text="Título del Card 3"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_weight="1">

                <TextView
                    style="@style/CardTitleStyle"
                    android:text="Título del Card 4"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>
        </TableRow>

    </TableLayout>
</LinearLayout>
    </ScrollView>